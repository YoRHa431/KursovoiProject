<Window x:Class="WpfApplicationEntity.Forms.Autorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Loaded="Window_Loaded"
        Title="Autorization" Height="150" Width="200">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Content="Логин" Padding="3" Margin="3"  />
        <Label Grid.Column="0" Grid.Row="1" Content="Пароль" Padding="3" Margin="3"  />      
        <TextBox x:Name="login" Grid.Column="1" Grid.Row="0" Padding="3" Margin="3"  />
        <TextBox x:Name="password" Grid.Column="1" Grid.Row="1" Padding="3" Margin="3"  />
        <Button x:Name="ButtonAddEditGroup"  Grid.Column="0" Grid.Row="2" Content="Войти" Grid.ColumnSpan="2" Padding="3" Margin="3" Click="ButtonAddEditAutorization_Click"  />
    </Grid>
</Window>
